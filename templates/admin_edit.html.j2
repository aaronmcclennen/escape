<!doctype html>
<html>
<head>
    <title>Admin — Edit Question</title>
<link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
<h1>Admin — {% if action == 'create' %}Create{% else %}Edit{% endif %} Question</h1>

{% if action == 'update' %}
  <div style="margin-bottom:12px;">
    {% if riddle.id > 0 %}
      <form action="/admin/questions/move/{{ riddle.id }}/up" method="post" style="display:inline">
        <button type="submit">Move Up</button>
      </form>
    {% endif %}
    {% if riddle.id < total_count - 1 %}
      <form action="/admin/questions/move/{{ riddle.id }}/down" method="post" style="display:inline">
        <button type="submit">Move Down</button>
      </form>
    {% endif %}
  </div>
{% endif %}

{% if action == 'create' %}
<form action="/admin/questions/create" method="post">
{% else %}
<form action="/admin/questions/update/{{ riddle.id }}" method="post">
{% endif %}
  <label>Question</label><br>
  <input class="admin-input" type="text" name="question" value="{{ riddle.question if riddle else '' }}"><br>
  <label>Answer(s) (comma separated)</label><br>
  <input class="admin-input" type="text" name="answer" value="{{ riddle.answer if riddle else '' }}"><br>
  <label>Hint</label><br>
  <input class="admin-input" type="text" name="hint" value="{{ riddle.hint if riddle else '' }}"><br>
  <label>Image name (static/)</label><br>
  <input class="admin-input" type="text" name="image_name" value="{{ riddle.image_name if riddle else '' }}"><br><br>
  <input type="submit" value="{% if action == 'create' %}Create{% else %}Update{% endif %}">
  <a href="/admin/questions" class="button">Cancel</a>
</form>

</body>
</html>