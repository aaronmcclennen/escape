<!doctype html>
<html>
<head>
  <title>Admin Login</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
  <style>
    .login-box { max-width:420px; margin:36px auto; padding:18px; border:1px solid #ddd; border-radius:6px; background:#fff; }
    .login-box label { display:block; margin-top:8px; }
    .login-box input[type="text"], .login-box input[type="password"] { width:100%; padding:8px; box-sizing:border-box; }
    .login-buttons { margin-top:12px; text-align:right; }
  </style>
</head>
<body>
  <div class="login-box">
    <h2>Admin Login</h2>

    {% if request.args.get('error') %}
      <div class="error">Login failed</div>
    {% endif %}

    <form method="post" action="{{ url_for('admin_login') }}">
      <input type="hidden" name="next" value="{{ request.args.get('next', '') }}">
      <label for="user">User</label>
      <input id="user" name="user" type="text" required autofocus>

      <label for="password">Password</label>
      <input id="password" name="password" type="password" required>

      <div class="login-buttons">
        <a href="{{ url_for('riddle') }}" class="button" style="margin-right:8px;">Cancel</a>
        <button type="submit" class="button">Sign in</button>
      </div>
    </form>
  </div>
</body>
</html>